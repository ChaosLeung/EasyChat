<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    xmlns:tools="http://schemas.android.com/tools"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginTop="0.2dp"
                                    app:cardCornerRadius="0dp">

    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/margin_small"
        android:clickable="true">

        <org.zhj.easychat.ui.widget.BezelImageView
            android:id="@+id/avatar"
            android:layout_width="@dimen/avatar_tiny"
            android:layout_height="@dimen/avatar_tiny"
            android:layout_marginRight="@dimen/text_size_big"
            android:src="@drawable/person_image_empty"
            android:scaleType="centerCrop"
            app:maskDrawable="@drawable/circle_mask"
            android:clickable="true"/>

        <TextView
            android:id="@+id/nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_toRightOf="@+id/avatar"
            android:layout_alignTop="@+id/avatar"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size_big"
            tools:text="用户名"/>

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            tools:text="2015-01-01 12:34"/>

        <TextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_toRightOf="@+id/avatar"
            android:layout_below="@+id/nickname"
            android:ellipsize="end"
            android:textColor="#2f2f2f"
            android:textSize="@dimen/text_size_big"
            tools:text="正文内容正文内容正文内容正文内容正文内容正文内容"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>